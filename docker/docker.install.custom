#!/usr/bin/env bash

# Here I install docker from the binaries as it gives better control over the daemon
DOCKER_PATH="/usr/local/bin/docker"
DOCKER_URL="https://get.docker.com/builds/$(uname -s)/$(uname -m)/docker-latest"

if [[ ! -e $DOCKER_PATH ]]; then
    curl -L $DOCKER_URL -o $DOCKER_PATH
    chmod +x $DOCKER_PATH
fi
